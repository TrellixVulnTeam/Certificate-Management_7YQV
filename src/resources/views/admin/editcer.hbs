    <div class="main_content">
        <div class="header">
            <h2>Chỉnh sửa thông tin chứng chỉ</h2>
        </div>
        <div class="content">
            <div class="wrap-table">
                <div class="wrap-tbl">
                    <form action="/admin/editcer/{{certificates.masv}}?_method=PUT " method="POST" id="add_stu">
                <div class="row justify-content-between text-left">
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Họ và tên<span class="text-danger"> *</span></label>
                        <input type="text" id="name" value="{{certificates.name}}" name="name"
                            placeholder="Nhập họ và tên" >
                    </div>
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Mã sinh viên<span class="text-danger"> *</span></label>
                        <input type="text" id="masv" value="{{certificates.masv}}" name="masv"
                            placeholder="Nhập mã sinh viên" >
                    </div>
                </div>
                <div class="row justify-content-between text-left">
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Mã chứng chỉ<span class="text-danger"> *</span></label>
                        <input type="text" id="code" value="{{certificates.code}}" name="code"
                            placeholder="Nhập mã chứng chỉ" >
                    </div>
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Nhập tên chứng chỉ<span class="text-danger">
                                *</span></label>
                        <input type="text" id="title" value="{{certificates.title}}" name="title"
                            placeholder=" Nhập tên chứng chỉ" >
                    </div>
                </div>
                <div class="row justify-content-between text-left">
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Xếp Loại<span class="text-danger"> *</span></label>
                        <input type="text" id="xeploai" value="{{certificates.xeploai}}" name="xeploai"
                            placeholder="Nhập xếp loại" >
                    </div>
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Ngày sinh<span class="text-danger"> *</span></label>
                        <input type="text" id="birday" value="{{certificates.birday}}" name="birday"
                            placeholder="Nhập xếp loại" >
                    </div>
                </div>
                <div class="row justify-content-between text-left">
                     <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Năm tốt nghiệp<span class="text-danger"> *</span></label>
                        <input type="text" id="grayear" value="{{certificates.grayear}}" name="grayear"
                            placeholder=" Nhập mã tín chỉ quốc phòng" >
                    </div>
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Hình thức đào tạo<span class="text-danger"> *</span></label>
                        <input type="text" id="hinhthucdt" value="{{certificates.hinhthucdt}}" name="hinhthucdt"
                            placeholder="Ngày phát hành" >
                    </div>
                </div>
                <div class="row justify-content-between text-left">
                     <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Người cấp<span class="text-danger"> *</span></label>
                        <input type="text" id="author" value="{{certificates.author}}" name="author"
                            placeholder="Tên người cấp bằng" >
                    </div>
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Ngày tạo<span class="text-danger"> *</span></label>
                        <input type="text" id="ngaytao" value="{{certificates.ngaytao}}" name="ngaytao"
                            placeholder="Ngày tạo" >
                    </div>
                   
                </div>
                <div class="row justify-content-between text-left">
                     <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Người cập nhật<span class="text-danger"> *</span></label>
                        <input type="text" id="updater" value="{{certificates.updater}}" name="updater"
                            placeholder="Tên người cập nhật" >
                    </div>
                 <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Trạng thái<span class="text-danger"> *</span></label>
                        <input type="text" id="status" value="{{certificates.status}}" name="status"
                            placeholder="Đang phát hành hoặc không" >
                    </div>
                  

                </div>
                 <div class="row justify-content-between text-left">
                    <div class="form-group col-sm-6 flex-column d-flex">
                        <label class="form-control-label px-3">Số vào sổ cấp bằng<span class="text-danger"> *</span></label>
                        <input type="text" id="codecb" value="{{certificates.codecb}}" name="codecb"
                            placeholder="Nhập số vào sổ cấp bằng" >
                    </div>
                    
                </div>

                <div class="row justify-content-end">
                    <div class="form-group col-sm-7">
                        <button type="submit" id="btneditpoint" class="add-btn pad-12-15">Cập nhật</button>
                    </div>
                </div>
            </form>
